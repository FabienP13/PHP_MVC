{
  "name": "ld-web/php-b3-su-mvc",
  "description": "Small MVC App written in PHP",
  "authors": [
    {
      "name": "Lucas",
      "email": "lucas@ld-web.net"
    }
  ],
  "require": {
    "doctrine/orm": "^2.10",
    "symfony/cache": "^5.3",
    "symfony/dotenv": "^5.3",
    "twig/twig": "^3.0",
    "psr/container": "1.1"
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public/ public/index.php",
    "test" : "phpunit tests --testdox",
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "@test --coverage-html coverage"
    ]
  },
  "config": {
    "process-timeout": 0
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  }
}
